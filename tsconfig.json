{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "target": "ES2015",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests__", "dist"]
}
